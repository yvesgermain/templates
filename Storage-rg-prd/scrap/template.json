{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Environnement" :{
      "type": "string"
    }
  },
  "variables": {
    "storageAccounts_storappsinterne_name": "[Concat('storappsinterne', parameters('Environnement'))]",
    "virtualNetworks_Vnet_externalid":  "[concat('/subscriptions/6a04c78c-475c-4872-b897-f85eec86bf02/resourceGroups/Vnet-rg-', parameters('Environnement'), '/providers/Microsoft.Network/virtualNetworks/Vnet-', parameters('Environnement'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-04-01",
      "name": "[variables('storageAccounts_storappsinterne_name')]",
      "location": "canadacentral",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [
            {
              "id": "[concat(variables('virtualNetworks_Vnet_externalid'), '/subnets/ServiceSnet-', parameters('Environnement'))]",
              "action": "Allow",
              "state": "Succeeded"
            }
          ],
          "ipRules": [
            {
              "value": "205.237.253.10",
              "action": "Allow"
            }
          ],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2019-04-01",
      "name": "[concat(variables('storageAccounts_storappsinterne_name'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_storappsinterne_name'))]"
      ],
      "properties": {
        "cors": {
          "corsRules": []
        },
        "deleteRetentionPolicy": {
          "enabled": true,
          "days": 7
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2019-04-01",
      "name": "[concat(variables('storageAccounts_storappsinterne_name'), '/default/appsinterne', parameters('Environnement'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageAccounts_storappsinterne_name'), 'default')]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_storappsinterne_name'))]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    }
  ]
}