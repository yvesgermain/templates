                },
                "subnets": [
                    {
                        "name": "[Concat('WebSnet-' , parameters('Environnement'))]",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "addressPrefix": "[variables( concat('addressPrefix-', parameters('Environnement')))]",
