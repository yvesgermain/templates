            "apiVersion": "2019-06-01",
            "name": "[parameters('virtualNetworks_name')]",
            "location": "canadacentral",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_name'))]"
            ],
            "properties": {
                "provisioningState": "Succeeded",
                "resourceGuid": "4324ab27-c24f-4031-83ae-e0048c55c7e7",
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables( concat('addressPrefixes-', parameters('Environnement')))]"
