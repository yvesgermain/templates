{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Environnement": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "servers_sqlguminterne_name": "[Concat('sqlguminterne-', parameters('Environnement'))]",
    "virtualNetworks_Vnet_externalid": "[concat('/subscriptions/6a04c78c-475c-4872-b897-f85eec86bf02/resourceGroups/Vnet-rg-', parameters('Environnement'), '/providers/Microsoft.Network/virtualNetworks/Vnet-', parameters('Environnement'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2015-05-01-preview",
      "name": "[variables('servers_sqlguminterne_name')]",
      "location": "canadacentral",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "[concat('sqladmin', parameters('Environnement'))]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "version": "12.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/administrators",
      "apiVersion": "2014-04-01-preview",
      "name": "[concat(variables('servers_sqlguminterne_name'), '/ActiveDirectory')]",
      "location": "Canada Central",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('servers_sqlguminterne_name'))]"
      ],
      "properties": {
        "administratorType": "ActiveDirectory",
        "login": "[concat('sqladmin' , parameters('Environnement'), '@gumqc.OnMicrosoft.com')]",
        "sid": "39670c6b-8290-4499-8f84-031f42d2399e",
        "tenantId": "33aaf871-69fa-44f2-9edf-e1048cbba3a5"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(variables('servers_sqlguminterne_name'), '/BdAppsInterne-', parameters('Environnement'))]",
      "location": "canadacentral",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('servers_sqlguminterne_name'))]"
      ],
      "sku": {
        "name": "S0",
        "tier": "Standard"
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 214748364800,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(variables('servers_sqlguminterne_name'), '/BdVeille-', parameters('Environnement'))]",
      "location": "canadacentral",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('servers_sqlguminterne_name'))]"
      ],
      "sku": {
        "name": "S0",
        "tier": "Standard"
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 214748364800,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2015-05-01-preview",
      "name": "[concat(variables('servers_sqlguminterne_name'), '/AllowAllWindowsAzureIps')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('servers_sqlguminterne_name'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2015-05-01-preview",
      "name": "[concat(variables('servers_sqlguminterne_name'), '/AllowSoquij')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('servers_sqlguminterne_name'))]"
      ],
      "properties": {
        "startIpAddress": "205.237.253.10",
        "endIpAddress": "205.237.253.10"
      }
    },
    {
      "type": "Microsoft.Sql/servers/virtualNetworkRules",
      "apiVersion": "2015-05-01-preview",
      "name": "[concat(variables('servers_sqlguminterne_name'), '/ServiceVnetRule1')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('servers_sqlguminterne_name'))]"
      ],
      "properties": {
        "virtualNetworkSubnetId": "[concat(variables('virtualNetworks_Vnet_externalid'), '/subnets/ServiceSnet-', parameters('Environnement'))]",
        "ignoreMissingVnetServiceEndpoint": false
      }
    }
  ]
}