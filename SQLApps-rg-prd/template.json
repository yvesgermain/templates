{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servers_sqlguminterne_name": {
            "type": "string"
        },
        "administratorLoginPassword": {
            "type": "securestring"
        },
        "environnement" :{
            "type": "string",
            "allowedValues": ["prd","qa","dev"]
        }
    },
    "variables": {
        "BdAppsInterne" : "[concat('BdAppsInterne-', parameters('environnement'))]" ,
        "DbVeille" : "[concat('DbVeille-', parameters('environnement'))]" ,
        "administratorLogin" : "[concat('sqladmin', parameters('environnement'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2015-05-01-preview",
            "name": "[parameters('servers_sqlguminterne_name')]",
            "location": "canadacentral",
            "kind": "v12.0",
            "properties": {
                "administratorLogin": "[variables('administratorLogin')]",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
                "version": "12.0"
            }
        },
        {
            "type": "Microsoft.Sql/servers/administrators",
            "apiVersion": "2014-04-01-preview",
            "name": "[concat(parameters('servers_sqlguminterne_name'), '/ActiveDirectory')]",
            "location": "Canada Central",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('servers_sqlguminterne_name'))]"
            ],
            "properties": {
                "administratorType": "ActiveDirectory",
                "login": "sqladminprd@gumqc.OnMicrosoft.com",
                "sid": "c74029db-ee61-4eae-912d-182fab6950f3",
                "tenantId": "33aaf871-69fa-44f2-9edf-e1048cbba3a5"
            }
        },
        {
            "type": "Microsoft.Sql/servers/auditingPolicies",
            "apiVersion": "2014-04-01",
