            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('servers_sqlguminterne_name'))]"
            ],
            "properties": {
                "state": "Disabled",
                "disabledAlerts": [
                    ""
                ],
                "emailAddresses": [
                    ""
                ],
                "emailAccountAdmins": false,
                "retentionDays": 0
            }
        }
    ]
